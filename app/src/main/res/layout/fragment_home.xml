<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">

    <RelativeLayout
        android:id="@+id/appBar_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_chat" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/btn_chat"
            android:background="@drawable/searchbar"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:background="@null"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:hint="Search.." />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBar_home"
        android:background="@color/colorWhite"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/appBar_home"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:scrollbarStyle="outsideOverlay">

                <Button
                    android:id="@+id/kategori1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_radiusbg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Pakaian"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp"
                    tools:layout_marginTop="5dp" />

                <Button
                    android:id="@+id/kategori2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_radiusbg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Buku"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp" />

                <Button
                    android:id="@+id/kategori3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_radiusbg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Gadget"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp"
                    tools:layout_marginTop="5dp" />

                <Button
                    android:id="@+id/kategori4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_radiusbg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Makeup"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp"
                    tools:layout_marginTop="5dp" />

                <Button
                    android:id="@+id/kategori5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_radiusbg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Skincare"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp"
                    tools:layout_marginTop="5dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_home"
        android:layout_width="411dp"
        android:layout_height="627dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kategori"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>
