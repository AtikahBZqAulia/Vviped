<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">

    <RelativeLayout
        android:id="@+id/appBar_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/logoappbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/logoapp"

            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:id="@+id/search_field"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/searchbar"
            android:layout_toRightOf="@+id/logoappbar"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:focusable="false"
                android:hint="Search"
                android:fontFamily="@font/cabin"/>


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/kategori"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/appBar_home"
        android:background="@color/colorWhite"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar_home"
        tools:ignore="MissingConstraints">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:scrollbarStyle="outsideOverlay"
                >

                <Button
                    android:id="@+id/kategori1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_product_category"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="top"
                    android:text="Pakaian"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cabin"

                     />

                <Button
                    android:id="@+id/kategori2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_product_category"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Buku"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cabin"
                    />

                <Button
                    android:id="@+id/kategori3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Gadget"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_product_category"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/cabin"
                     />

                <Button
                    android:id="@+id/kategori4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_product_category"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Makeup"
                    android:textAllCaps="false"
                    android:fontFamily="@font/cabin"
                     />

                <Button
                    android:id="@+id/kategori5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_product_category"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Skincare"
                    android:textAllCaps="false"
                    android:fontFamily="@font/cabin"
                    />

            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBarTabHome"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/kategori"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshTabHomeProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="98dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kategori"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints">

        </androidx.recyclerview.widget.RecyclerView>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
