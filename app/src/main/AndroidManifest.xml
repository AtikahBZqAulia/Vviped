<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilkom.vviped">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name="com.ilkom.vviped.SettingsActivity"/>
        <activity android:name="com.ilkom.vviped.CategoriesProduct" />
        <activity android:name="com.ilkom.vviped.EditProfileUser" />
        <activity
            android:name="com.ilkom.vviped.IntroSlider"
            android:theme="@style/AppTheme.NoStatusBar"
            android:noHistory="true"/>
        <activity android:name="com.ilkom.vviped.ChatForBuying" />
        <activity android:name="com.ilkom.vviped.model.login.Logout" />
        <activity android:name="com.ilkom.vviped.create_campaign" />
        <activity
            android:name="com.ilkom.vviped.UploadSellingActivity"
            android:label="@string/title_activity_upload_selling"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ilkom.vviped.Landing"
            android:theme="@style/AppTheme.NoStatusBar" />
        <activity
            android:name="com.ilkom.vviped.UserLogin"
            android:theme="@style/AppTheme.NoStatusBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ilkom.vviped.UserRegister"
            android:theme="@style/AppTheme.NoStatusBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.ilkom.vviped.splashScreen"
            android:theme="@style/AppTheme.NoStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ilkom.vviped.MainActivity"
            android:windowSoftInputMode="stateHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>